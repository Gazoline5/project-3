<Page x:Class="Lab6Fomina.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab6Fomina.Pages"
      mc:Ignorable="d"
      Title="RegisterPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Label Content="Регистрация" FontWeight="Bold" HorizontalAlignment="Center"/>
            
            <Label Content="Фамилия"/>
            <TextBox Text="{Binding LastName}"/>

            <Label Content="Имя"/>
            <TextBox Text="{Binding FirstName}"/>

            <Label Content="Email"/>
            <TextBox Text="{Binding Email}"/>

            <Label Content="Пароль"/>
            <TextBox Text="{Binding Password}"/>

            <Button Content="Регистрация" Name="RegisterBT" Click="RegisterBT_Click"/>
        </StackPanel>
    </Grid>
</Page>
